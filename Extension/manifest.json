{
    "manifest_version": 2,
    "name": "Jira On Fire by Kolossi",
    "short_name": "Jira On Fire",
    "description" :"For cloud-hosted jira (https://*.atlassian.net) this will do some enhancements to the jira display. See options.",
    "version": "0.7.5",
    "icons" : {
        "16": "jira16.png",
        "32": "jira32.png",
        "48": "jira48.png",
        "64": "jira64.png",
        "96": "jira96.png",
        "128": "jira128.png"
    },
    "web_accessible_resources": [
        "jira16.png",
        "jira32.png"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.atlassian.net/*"
            ],
            "js": [
                "jquery-3.1.0.js",
                "fireit.js",
                "jiradata.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "permissions": [
          "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
